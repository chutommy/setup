syntax on
filetype plugin indent on

set encoding=utf-8
set noerrorbells
set mouse-=a
set wildmenu

set virtualedit=block
set scrolloff=4
set sidescrolloff=4

set splitbelow
set splitright

set ignorecase
set smartcase
set incsearch
set hlsearch

set tabstop=4
set shiftwidth=4
set softtabstop=4
set autoindent
set smartindent
set expandtab

set list
set listchars=tab:··>,trail:·,nbsp:_

set showcmd
set showmode
set ruler
set laststatus=2

set statusline=
set statusline+=\ %F\ %M\ %Y\ %R\ %W
set statusline+=%=
set statusline+=\ ascii:\ %b\ hex:\ 0x%B
set statusline+=\ row:\ %l\ col:\ %c\ percent:\ %p%%
